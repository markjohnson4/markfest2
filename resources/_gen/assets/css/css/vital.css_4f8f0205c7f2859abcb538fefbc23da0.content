:root{--logo-shadow-wh: 0.1em}body{background:pink;font-size:20px;font-family:sans-serif}.logo{display:inline-flex;line-height:1;font-size:10rem;.big-words { background: red; }}.big-words{font-size:1em;text-transform:uppercase;display:flex;justify-content:space-between}.logo-letter{color:purple;position:relative;transition-duration:.3s;top:0;right:0}.logo-letter:hover{text-shadow:calc(-1 * var(--logo-shadow-wh)) var(--logo-shadow-wh) #000;top:calc(-1 * var(--logo-shadow-wh));right:calc(-1 * var(--logo-shadow-wh))}.bigger-number{font-size:2em;margin:0 0 0 .1em}